---
import { getCollection } from 'astro:content';

const footerEntries = await getCollection('footer');
const footer = footerEntries[0];

if (!footer) {
  throw new Error('Footer configuration not found');
}

const { copyright_text, social_links } = footer.data;
---

<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="mb-4 md:mb-0">{copyright_text}</p>
      
      <div class="flex space-x-6">
        {social_links.map((social) => (
          <a 
            href={social.link}
            class="hover:text-gray-300 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            {social.platform}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer> 