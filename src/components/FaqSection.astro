---
import { getCollection } from 'astro:content';

const faqEntries = await getCollection('faq');
const faq = faqEntries[0];

if (!faq) {
  throw new Error('FAQ configuration not found');
}

const { title, faqs } = faq.data;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{title}</h2>
    
    <div class="max-w-3xl mx-auto space-y-6">
      {faqs.map((item) => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">{item.question}</h3>
          <p class="text-gray-600">{item.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section> 