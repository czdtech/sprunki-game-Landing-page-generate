---
import { getCollection } from 'astro:content';

const featuresEntries = await getCollection('features');
const features = featuresEntries[0];

if (!features) {
  throw new Error('Features configuration not found');
}

const { title, features: featuresList } = features.data;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{title}</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {featuresList.map((feature) => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 