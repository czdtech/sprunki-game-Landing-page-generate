---
import { getCollection } from 'astro:content';

const navigationEntries = await getCollection('navigation');
const navigation = navigationEntries[0];

if (!navigation) {
  throw new Error('Navigation configuration not found');
}

const { logo, items } = navigation.data;
---

<header class="bg-background-light border-b border-background">
  <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <img src={logo} alt="Sprunki Logo" class="h-8" />
    </a>
    
    <ul class="flex space-x-6">
      {items.map((item: { name: string; link: string }) => (
        <li>
          <a 
            href={item.link} 
            class="text-text-secondary hover:text-accent-blue transition-colors"
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header> 