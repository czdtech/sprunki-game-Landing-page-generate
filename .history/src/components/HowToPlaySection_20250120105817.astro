---
import { getEntry } from 'astro:content';

const howToPlay = await getEntry('config', 'how-to-play');
const { title, steps } = howToPlay.data;
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{title}</h2>
    
    <div class="max-w-3xl mx-auto">
      {steps.map((step) => (
        <div class="flex items-start mb-8">
          <div class="bg-purple-600 text-white rounded-full w-8 h-8 flex items-center justify-center flex-shrink-0 mr-4">
            {step.step_number}
          </div>
          <p class="text-lg">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 